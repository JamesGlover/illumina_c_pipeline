<div class="tube">

  <div class="tube-view">
  <!-- colour circles are not in place as tube.aliquots.empty? is true, as this is not the 'full' tube -->
    <% unless tube.aliquots.empty? -%>
      <div id="<%= "aliquot_#{tube.uuid}" %>" class="aliquot <%= pooling_colour(tube, tube.uuid) %>">&nbsp;</div>
    <% end -%>
    <%= check_box_tag "tubes[#{tube.uuid}]", tube.barcode.ean13, tube.can_be_passed?, disabled: !tube.can_be_passed?%>
  </div>


  <ul id="information">
    <li><span class="label">Barcode</span>       <%= link_to(useful_barcode(tube.barcode), illumina_c_tube_path(tube.uuid), :target => '_blank') %></li>
    <li><span class="label">Current state</span> <%= tube.state %></li>
    <li><span class="label">Source wells</span>  <%= source.join(', ') %></li>
  </ul>
</div>
